{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDirs": ["./src", "./stories"],
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "index.d.ts",
      "node_modules/@types"
    ],
    "lib": [
      "es5", "es6", "es2015", "es7", "es2016", "es2017", "es2018", "dom"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}